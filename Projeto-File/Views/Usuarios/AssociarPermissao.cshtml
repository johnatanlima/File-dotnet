@model Projeto_File.Models.ViewModels.UsuarioRoleViewModel

@{
    ViewData["Title"] = "Associar Permissão";
}

<h4 class="alert-info col-md-6">Associar Permissões de Usuário </h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssociarPermissao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Descrição de Usuário</label>
                <select asp-for="UsuarioId" asp-items="ViewBag.UsuarioId" class="form-control"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeRole" class="control-label"> Nível de permissão</label>
                <select asp-for="NomeRole" asp-items="ViewBag.NivelAcessoId" class="form-control border border-secondary"></select>
                <span asp-validation-for="NomeRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Associar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Voltar para o início</a>
</div>

